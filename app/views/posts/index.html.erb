<p id="notice"><%= notice %></p>

<h2>Posts list</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td>
	  <% if can? :read, Post %>
            <%= link_to 'Show', post %>
	  <% end %>
	</td>
        <td>
	  <% if can? :edit, Post %>
 	    <%= link_to 'Edit', edit_post_path(post) %>
	  <% end %>
	</td>
        <td>
	  <% if can? :destroy, Post %>
	    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	  <% end %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
